datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model LoginSession {
  id          Int    @id @default(autoincrement())
  user_id      Int    @map("user_id")
  access_token String
  expires_in   Int    // Access token expiration time

  @@index([user_id])
  @@index([access_token])
}


